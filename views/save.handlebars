<nav class="navbar">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/" class="navbar-brand">Mongo Scraper</a>
      <ul class="nav navbar-nav">
        <li><a href="/">Home</a></li>
        <li><a href="/save" class="active">Saved Articles</a></li>
        <li><a class="btn scrape-new">Scrape New Articles</a></li>
      </ul>
    </div>
</nav>

<div class="jumbotron">
  <h1>Mongo Scraper</h1>
  <p>Wall Street Journal Edition</p>
</div>

<div class="container-fluid articles">
</div>

<footer class="footer">
  <div class="container">
    <p>WSJ Mongo Scraper</p>
    {{#each data}}
    <div class="card">
      <h3 class="card-header">{{this.title}}</h3>
      <div class="card-body">
        <p class="card-text">{{this.summary}}</p>
        <a href="{{link}}" class="btn">Read More</a>
        <a href="#" id="note" data-id="{{id}}" class="btn">Article Notes</a>
        <a href="#" id="unsave" data-id="{{id}}" class="btn">Unsave</a>
      </div>
    </div>
    {{/each}}
  </div>
  {{!-- modal for notes --}}
  <div class="modal" id="noteMod" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Notes</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body notes">
        </div>
        <div class="modal-body">
          <form>
            <div class="form-group">
              <textarea class="form-control" id="textArea" rows="3"></textarea>
            </div>

        </div>
        </form>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" id="modalSaveNote" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>


</footer>
</div> {{!-- this ends the container --}}

{{!-- JAVASCRIPT --}}
